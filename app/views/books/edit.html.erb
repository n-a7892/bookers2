<div class="container">
 <% if @book.errors.any? %>
     <%= @book.errors.count %>error
      <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
  <% end %>
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>Editing Book</h2>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |u| %>
   <h4>Tilte</h4>
    <%= u.text_field :title %>
   <h4>Opinion</h4>
    <%= u.text_area :body %><br>
    <%= u.submit 'Update Book' %><br>
  <% end %>
  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <%= link_to "Back", books_path %>
</div>
</div>
</div>