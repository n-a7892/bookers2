<p id="notice"></p>
<div class="container">
  <% if @book.errors.any? %>
     <%= @book.errors.count %>error
      <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(60,60) %>
      <table class="table table-inverse">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
<div>
<%= link_to edit_user_path(current_user) do %>
 <div class="btn btn-outline-secondary btn-block">
  <i class="fas fa-user-cog"></i>
 </div>
<% end %>
</div>
<p>
      <%= render 'new', book: @book %>
</p>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u| %>
           <tr>
            <td><%= image_tag(u.get_profile_image(40,40)) %></td>
            <td><%= u.name %></td>
            <td></td>
            <td><%= link_to "Show", user_path(u.id) %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
